    }

    .export-btn {
      background: var(--success-color);
      margin-top: 20px;
    }

    .export-btn:hover {
      background: #388e3c;
    }

    .reset-btn {
      background: var(--danger-color);
      margin-left: 10px;
    }

    .reset-btn:hover {
      background: #d32f2f;
    }

    @media (max-width: 768px) {
      .container {
