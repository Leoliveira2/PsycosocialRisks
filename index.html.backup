      }
      
      .card {
        padding: 15px;
      }
      
      .radio-option {
        padding: 8px 10px;
      }
      
      .radio-text {
        font-size: 13px;
      }
      
      .question-title {
        font-size: 0.9rem;
      }
    }
  </style>
</head>
